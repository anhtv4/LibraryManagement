<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.LibraryManagement"
        tools:targetApi="31">
        <activity
            android:name=".activity.ReportDetailActivity"
            android:exported="false"
            android:parentActivityName=".activity.ListReportActivity"/>
        <activity
            android:name=".activity.AddReportActivity"
            android:exported="false"
            android:parentActivityName=".activity.ListReportActivity"/>
        <activity
            android:name=".activity.ListReportActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.ReaderDetailActivity"
            android:exported="false"
            android:parentActivityName=".activity.ListReaderActivity" />
        <activity
            android:name=".activity.AddReaderActivity"
            android:exported="false"
            android:parentActivityName=".activity.ListReaderActivity" />
        <activity
            android:name=".activity.ListReaderActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.AddBookActivity"
            android:exported="false"
            android:parentActivityName=".activity.BookManagement" />
        <activity
            android:name=".activity.BookDetailActivity"
            android:exported="false"
            android:parentActivityName=".activity.BookManagement" />
        <activity
            android:name=".activity.BookManagement"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>